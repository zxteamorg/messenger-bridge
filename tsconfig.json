{
	"//": "This is used in our build process. Also this file is requred by VSCode",
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"target": "es2022",
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
	}
}
